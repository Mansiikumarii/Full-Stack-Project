# Backend Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# For MongoDB Atlas, use: mongodb+srv://username:password@cluster.mongodb.net/database
# For Local MongoDB, use: mongodb://localhost:27017/productr
MONGODB_URI=mongodb://localhost:27017/productr

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=10d

# Demo Mode (set to 'false' to use MongoDB)
DEMO_MODE=true

# Email Configuration (Optional - for real OTP sending)
# Gmail requires an App Password, not your regular password
# Generate app password: https://support.google.com/accounts/answer/185833
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password-here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
